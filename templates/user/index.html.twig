{% extends 'base.html.twig' %}

{% block body %}
<div class="container"> 
<table class="table">
  <thead>
    <tr>
      <th scope="col">Firstname</th>
      <th scope="col">Lastname</th>
      <th scope="col">Age</th>
      <th scope="col">Action </th>
    </tr>
  </thead>
  <tbody>
  {% for user in users %}

    <tr>
      <th scope="row">{{user.firstname}}</th>
      <th scope="row">{{user.lastname}}</th>
      <th scope="row">{{user.age}}</th>
      <th scope="row">
        <a class="btn btn-primary" href="{{ path('user_article', {'id': user.id}) }}">Articles</a>
        <a class="btn btn-primary" href="{{ path('user_show', {'id': user.id}) }}">Show</a>
      </th>
    </tr>
    

    {% endfor %}
  </tbody>
  </table>
  <a href="{{ path('user_create') }}" class="btn btn-primary">Add new user </a>
</div>
{% endblock %}