{% extends 'base.html.twig' %}

{% block body %}

<div class="card mt-3">

  <div class="card-header">
    {{article.title}}
  </div>
  <div class="card-body">
  <div class="d-flex gap-2">
    <p>{{article.user.lastname | first}}.{{article.user.firstname }}</p>
    <p>{{article.createdAt | date("d/m/Y") }}</p>
  </div>
    <p>{{article.categories.name}}</p>
   <blockquote class="blockquote mb-0">
      <p>{{article.content}}</p>
      <a class="btn btn-warning" href="{{ path('article_edit', {'id': article.id}) }}">Edit</a>
      <a class="btn btn-danger" href="{{ path('article_delete', {'id': article.id}) }}">Delete</a>
      <a class="btn btn-success" href="{{ path('article_like', {'id': article.id}) }}">{{article.liked ? 'Like': 'Unlike'}}</a>

    </blockquote>

  </div>
</div>
{% endblock %}